<header>
    <nav>
        <h2>
            <a href="/"><%- site_name %> </a>
        </h2>
        <div class="internal-links">
            <%- main_nav %>
        </div>
        <div class="social-linkss">
            <a href="https://twitter.com/astrodotbuild" target="_blank">
                <span class="sr-only">Follow Astro on Twitter</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                    <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"></path>
                </svg>
            </a>
            <button id="menu-toggle" class="menu-toggle">☰
            </button>
        </div>
        <div id="offcanvas-menu" class="offcanvas-menu">
            <div class="wrap" style="padding: 0em 0em 0em 2em; display: flex; flex-direction: column">
               <div class="offcanvas-header" style="display: flex; flex-direction: row; align-items: center;">
                    <h2 style="color: white">J. Stevens</h2>
                    <button id="close-menu" class="close-menu">×</button>
                </div>
               
                <ul>
                      <li><a href="#home">Home</a></li>
                      <li><a href="#about">About</a></li>
                      <li><a href="#services">Services</a></li>
                      <li><a href="#contact">Contact</a></li>
                </ul>
                <style>
                    me {

                        .offcanvas-header > * {
                          flex: 1 1 50%; /* Grow, shrink, and take 50% of container width */
                          
                          box-sizing: border-box;
                          
                        }

                        .offcanvas-header > *:last-child {
                          
                            text-align: right;
                        }
                    }
                </style>
            </div>
        </div>
    </nav>
    <style>
        me {
            /* header { */
                margin: 0;
                padding: 0 1em;
                background: white;
                box-shadow: 0 2px 8px rgba(var(--black), 5%);

            h2 {
                margin: 0;
                font-size: 1em;
            }

            h2 a,
            h2 a.active {
                text-decoration: none;
            }

            nav {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            nav a {
                padding: 1em 0.5em;
                color: var(--black);
                border-bottom: 4px solid transparent;
                text-decoration: none;
            }

            nav a.active {
                text-decoration: none;
                border-bottom-color: var(--accent);
            }

            .social-links,
            .social-links a {
                display: flex;
            }

            @media (max-width: 768px) {
                .social-links {
                    display: none;
                }
            }
        }
    </style>
    <script>
        // Get elements
const menuToggle = document.getElementById('menu-toggle');
const closeMenu = document.getElementById('close-menu');
const offcanvasMenu = document.getElementById('offcanvas-menu');

// Open menu
menuToggle.addEventListener('click', () => {
    console.log("?");
    offcanvasMenu.classList.add('open');
});

// Close menu
closeMenu.addEventListener('click', () => {
  offcanvasMenu.classList.remove('open');
});

// Optional: Close menu if user clicks outside of it
document.addEventListener('click', (event) => {
  if (!offcanvasMenu.contains(event.target) && !menuToggle.contains(event.target)) {
    offcanvasMenu.classList.remove('open');
  }
});

    </script>
</header>