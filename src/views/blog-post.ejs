<%- require("./_top.ejs")({
	header: require("/partials/site/header.ejs")({
		site_name: site.name,
		page,
		main_nav: header.main_nav.map(x => {
			return require("/partials/site/header-link.ejs")({
				...x,
				current_page: page
			})
		}).join('')
	})
}) %>

<main>
	<article>
		<div class="hero-image">
			{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
		</div>
		<div class="prose">
			<div class="title">
				<div class="date">
					<FormattedDate date={pubDate} />
					{
						updatedDate && (
							<div class="last-updated-on">
								Last updated on <FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
				<h1>{title}</h1>
				<hr />
			</div>
			<slot />
		</div>
	</article>
</main>

<%- require("./_bottom.ejs")() %>